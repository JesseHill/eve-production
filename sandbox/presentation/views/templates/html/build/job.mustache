
<table class="table table-bordered">
<thead>
	<tr><th colspan="3">{{title}} - {{runs}}</th></tr>
</thead>

<tbody>
{{#has_invention_cost?}}
	<tr><td class="label-column">Material Cost</td><td>{{material_cost}}</td></tr>
	<tr><td class="label-column">Invention Cost</td><td>{{invention_cost}}</td></tr>
	<tr><td class="label-column">Total Cost</td><td>{{cost}}</td></tr>
{{/has_invention_cost?}}
{{^has_invention_cost?}}
	<tr><td class="label-column">Cost</td><td>{{cost}}</td></tr>
{{/has_invention_cost?}}

<tr><td class="label-column">Cost per unit</td><td>{{cost_per_unit}}</td></tr>
<tr><td class="label-column">Value</td><td>{{value}}</td></tr>
<tr><td class="label-column">Value per unit</td><td>{{value_per_unit}}</td></tr>
<tr><td class="label-column">Profit</td><td>{{profit}}</td></tr>
<tr><td class="label-column">Profit per unit</td><td>{{profit_per_unit}}</td></tr>
<tr><td class="label-column">Profit margin</td><td>{{profit_margin}}</td></tr>
<tr><td class="label-column">Production time</td><td>{{production_time}}</td></tr>
<tr><td class="label-column">Profit per hour</td><td>{{profit_per_hour}}</td></tr>

{{#has_marketing_stats?}}
	<tr><td class="label-column">Marketable volume per day</td><td>{{marketable_volume_per_day}}</td></tr>
	<tr><td class="label-column">Marketable profit per day</td><td>{{marketable_profit_per_day}}</td></tr>
	<tr><td class="label-column">Marketable hourly profit</td><td>{{marketable_hourly_profit}}</td></tr>
{{/has_marketing_stats?}}

{{#print_materials?}}
<tr>
	<td class="label-column">Materials</td>
	<td>
		<table class="table table-condensed">
		<thead>
			<tr><th>Type</th><th>Cost per Unit</th><th>Total Cost</th></tr>
		</thead>
		<tbody>
			{{#materials}}
				{{{render}}}
			{{/materials}}
		</tbody>
		</table>
	</td>
</tr>
{{/print_materials?}}

</tbody>
</table>